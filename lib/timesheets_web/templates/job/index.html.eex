<h1>Manage Your Jobs</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Job Name</th>
      <th>Description</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for job <- @jobs do %>
    <tr>
      <td><%= job.jobname %></td>
      <td><%= job.desc %></td>

      <td>
        <span><%= link "Show", to: Routes.job_path(@conn, :show, job) %></span>
        <span><%= link "Edit", to: Routes.job_path(@conn, :edit, job) %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>